<table 
	ng-show="productCategories.length > 0"
	class = "table table-striped table-hover"
>
	<tr class="success">
		<td>Category Name</td>
		<td>Details</td>
		<td>IsActive Category</td>
		<td>Created Date</td>
		<td>Actions</td>
	</tr>

	<tr ng-repeat="productCategory in productCategories">
		<td>{{productCategory.categoryName}}</td>
		<td>{{productCategory.Details}}</td>
		<td>{{productCategory.isValid == "1" ? "valid" : "invalid"}}</td>
		<td>{{productCategory.CreatedDate}}</td>
		<td class="info">
			<div class="btn-group">
				<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
					Edit Product Category<span class="caret"></span>
				</button>
				<ul class="dropdown-menu" role="menu">
					<li><a href="/editProductCategory/{{productCategory.id}}">Edit Product Category</a></li>
					<li><a href="#">View Details</a></li>
					<li><a class="divider"></a></li>
					<li>
						<button type="button"
								class="btn btn-danger"
								data-toggle="modal"
								data-target="#exampleModal"
								data-categoryId="{{productCategory.id}}"
								data-ng-click="setCurrentProductCategoryId(productCategory.id)">Delete Product Category
						</button>
					</li>
				</ul>
			</div>
		</td>
	</tr>
</table>